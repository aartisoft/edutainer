<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_product"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/shape_rectangle_corner"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/shape_rectangle"
                        android:id="@+id/iv_product"
                        android:src="@drawable/robotics_a"
                        android:layout_margin="8dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_toEndOf="@+id/iv_product"
                        android:paddingTop="2dp"
                        android:paddingBottom="4dp"
                        android:text="Introduction to Iot"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_below="@+id/tv_title"
                        android:layout_toEndOf="@+id/iv_product"
                        android:text="IoT course"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_duration"
                            android:padding="8dp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="start"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:text="Duration"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_duration_value"
                            android:lineSpacingExtra="4dp"
                            android:padding="8dp"
                            android:gravity="start"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:text="Introduction to iot"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <View
                        android:background="#10000000"
                        android:layout_marginStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_course_cost"
                            android:padding="8dp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="start"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:text="Course cost"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_course_cost_value"
                            android:padding="8dp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="start"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:text="Introduction to iot"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_kit_cost"
                            android:padding="8dp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="start"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:text="Kit cost"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_kit_cost_value"
                            android:padding="8dp"
                            android:lineSpacingExtra="4dp"
                            android:gravity="start"
                            android:textColor="#555555"
                            android:textSize="16sp"
                            android:text="Introduction to iot"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_address"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/shape_rectangle_corner"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_address"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_address"
                        android:lineSpacingExtra="4dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center|start"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:text="Shipping address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:background="@android:color/transparent"
                            android:id="@+id/et_street_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Street Address"
                            android:text=""
                            android:inputType="text" />

                        <View
                            android:background="#10000000"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                        <EditText
                            android:background="@android:color/transparent"
                            android:id="@+id/et_town_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Town/City"
                            android:text=""
                            android:inputType="text" />

                        <View
                            android:background="#10000000"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                        <Spinner
                            android:id="@+id/spinner_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" />

                        <View
                            android:background="#10000000"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                        <EditText
                            android:background="@android:color/transparent"
                            android:id="@+id/et_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="PinCode"
                            android:text=""
                            android:inputType="number" />

                        <View
                            android:background="#10000000"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:gravity="end|center"
                        android:id="@+id/tv_amount"
                        android:padding="8dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="Amount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_amount_value"
                        android:padding="8dp"
                        android:gravity="end|center"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:text="1000 inr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="#10000000"
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/tv_gst"
                        android:gravity="end|center"
                        android:padding="8dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="GST (18%)"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_gst_value"
                        android:padding="8dp"
                        android:gravity="end|center"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:text="108 inr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="#10000000"
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/tv_total"
                        android:gravity="end|center"
                        android:padding="8dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:text="Total"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_total_value"
                        android:padding="8dp"
                        android:gravity="end|center"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:text="1180 inr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="#10000000"
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>


                <TextView
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_coupon"
                    android:id="@+id/tv_coupon"
                    android:layout_gravity="end"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="0dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="24dp"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:text="Apply coupon code  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_login"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_pay"
                        android:text="Pay"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:background="@drawable/shape_button_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:alpha="0.5"
            android:layout_gravity="center"
            android:id="@+id/iv_checkout"
            android:src="@drawable/img_checkout"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

