<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="16dp"
    app:cardCornerRadius="8dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:id="@+id/ll_product"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/gradient_home_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:fitsSystemWindows="true"
            android:id="@+id/iv_product"
            android:scaleType="centerCrop"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_title"
                android:padding="8dp"
                android:background="@drawable/shape_title_product"
                android:textColor="#333333"
                android:textSize="20sp"
                android:text="  Understanding of IoT  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:id="@+id/tv_description"
                android:layout_below="@+id/tv_title"
                android:layout_above="@+id/cv_learn_more"
                android:padding="8dp"
                android:maxLines="8"
                android:ellipsize="end"
                android:lineSpacingExtra="12dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="   This course is designed to help you make some incredible IoT products from scratch. The primary focus of this course is to allow the learners to immediately start building the IoT systems. We have talked about all the hardware, software, protocols and platforms related to IoT. With our high-quality study materials and practical kits, you can go beyond the imagination and create the most unique IoT solution."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_learn_more"
                android:layout_alignParentBottom="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="16dp"
                android:layout_margin="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_learn_more"
                    android:text="learn more"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/shape_button_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:alpha="0.05"
                android:scaleType="centerCrop"
                android:src="@drawable/iot_a" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

