<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        app:titleTextColor="#666"
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar_login"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>

    <ImageView
        android:src="@drawable/login_bg_d"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_above="@+id/ll_password"
            android:id="@+id/ll_email"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_mail_filled"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_email"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email / Mobile *"
                android:textColorHint="#333"/>

            <View
                android:layout_marginStart="16dp"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_above="@+id/tv_forgot_password"
            android:id="@+id/ll_password"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_lock_filled"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_password"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password *"
                android:textColorHint="#333"
                android:inputType="textPassword"/>

            <View
                android:layout_marginStart="16dp"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_alignParentEnd="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_above="@+id/cv_login"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="Forgot password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_login"
            android:layout_above="@+id/tv_create_account"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_login"
                android:text="login"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:background="@drawable/shape_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_create_account"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="64dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text=" New here? Create account. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>
