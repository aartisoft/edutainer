<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        app:titleTextColor="#666"
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar_login"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>

    <ImageView
        android:src="@drawable/login_bg_d"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <LinearLayout
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <EditText
            android:drawableStart="@drawable/ic_mail_filled"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:id="@+id/et_email"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="16dp"
            android:background="@android:color/transparent"
            android:textColor="#666"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email / Mobile *"
            android:textColorHint="#333"/>

        <View
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_lock_filled"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_password"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Password *"
                android:textColorHint="#333"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_visibility"
                android:padding="8dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:layout_marginStart="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_forgot"
            android:id="@+id/tv_forgot_password"
            android:layout_gravity="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="Forgot password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:id="@+id/cv_login"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_login"
                android:text="login"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/shape_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_create_account"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text=" New here? Create account. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
