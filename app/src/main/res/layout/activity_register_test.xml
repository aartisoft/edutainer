<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:fitsSystemWindows="true"
        app:titleTextColor="#666"
        android:background="@android:color/transparent"
        android:id="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>

    <ImageView
        android:src="@drawable/register_bg_a"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_person_filled"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_name"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name *"
                android:textColorHint="#333"/>

            <View
                android:layout_marginStart="16dp"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/ll_name"
            android:id="@+id/ll_mobile"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_mobile"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_mobile"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile *"
                android:textColorHint="#333"
                android:inputType="phone"/>

            <View
                android:layout_marginStart="16dp"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

         <LinearLayout
            android:layout_below="@+id/ll_mobile"
            android:id="@+id/ll_email"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_mail_filled"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_email"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email*"
                android:textColorHint="#333"
                android:inputType="textEmailAddress"/>

            <View
                android:layout_marginStart="16dp"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ll_email"
            android:id="@+id/ll_password"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:drawableStart="@drawable/ic_lock_filled"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:id="@+id/et_password"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="16dp"
                android:background="@android:color/transparent"
                android:textColor="#666"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password*"
                android:textColorHint="#333"
                android:inputType="text"/>

            <View
                android:layout_marginStart="16dp"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

        </LinearLayout>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ll_password"
            android:id="@+id/tv_refer_code"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="Have refer code? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_terms"
            android:layout_below="@+id/tv_refer_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp">

            <CheckBox
                android:id="@+id/cb_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I accept the " />

            <TextView
                android:id="@+id/tv_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="#B3157EFB" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_create_account"
            android:layout_below="@+id/ll_terms"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_create_account"
            android:text="Create account"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/shape_button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_below="@+id/cv_create_account"
            android:id="@+id/tv_login"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:text="Already a user? Login. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>

